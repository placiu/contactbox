{% extends "base.html.twig" %}

{% block title %}New Contact{% endblock %}

{% block fos_user_content %}
    <div class="jumbotron mt-5">
        <h1 class="display-4">ADD NEW CONTACT</h1>
        <hr class="my-4">
        {{ form_start(form) }}
            {{ form_row(form.firstname, {'attr': {'class': 'form-control'}, 'label': 'First Name'}) }}
            {{ form_row(form.lastname, {'attr': {'class': 'form-control'}, 'label': 'Last Name'}) }}
            {{ form_row(form.description, {'attr': {'class': 'form-control'}, 'label': 'Description'}) }}
            {{ form_row(form.image_path, {'attr': {'class': 'form-control-file'}, 'label': 'Avatar'}) }}
            {{ form_row(form.save, {'attr': {'class': 'mt-5 btn btn-outline-primary'}}) }}
            {{ form_row(form.addresses, {'label': false}) }}
            {{ form_row(form.phones, {'label': false}) }}
            {{ form_row(form.mails, {'label': false}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
